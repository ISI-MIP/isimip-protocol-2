{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://isi-mip.github.io/isimip-protocol-2/schema/ISIMIP2a/OutputData/permafrost.json",
  "type": "object",
  "properties": {
    "dimensions": {
      "type": "object",
      "required": [
        "lat",
        "lon",
        "time"
      ],
      "properties": {
        "lat": {
          "const": 360
        },
        "lon": {
          "const": 720
        }
      }
    },
    "variables": {
      "type": "object",
      "required": [
        "lat",
        "lon",
        "time"
      ],
      "properties": {
        "lat": {
          "type": "object",
          "required": [
            "axis",
            "long_name",
            "units"
          ],
          "properties": {
            "axis": {
              "const": "Y"
            },
            "units": {
              "const": "degrees_north"
            }
          }
        },
        "lon": {
          "type": "object",
          "required": [
            "axis",
            "long_name",
            "units"
          ],
          "properties": {
            "axis": {
              "const": "X"
            },
            "units": {
              "const": "degrees_east"
            }
          }
        },
        "time": {
          "type": "object",
          "required": [
            "long_name",
            "units"
          ],
          "properties": {
            "axis": {
              "const": "T"
            },
            "units": {
              "enum": [
                "days since 1901-01-01",
                "days since 1901-01-01 00:00:00",
                "days since 1901-1-1",
                "days since 1901-1-1 00:00:00",
                "months since 1901-01-01",
                "months since 1901-01-01 00:00:00",
                "months since 1901-01-01",
                "months since 1901-01-01 00:00:00",
                "years since 1901-01-01",
                "years since 1901-01-01 00:00:00",
                "years since 1901-01-01",
                "years since 1901-01-01 00:00:00"
              ]
            }
          }
        }
      }
    },
    "specifiers": {
      "type": "object",
      "required": [
        "model",
        "climate_forcing",
        "bias_adjustment",
        "climate_scenario",
        "soc_scenario",
        "sens_scenario",
        "variable",
        "region",
        "timestep"
      ],
      "properties": {
        "model": {
          "type": "string"
        },
        "climate_forcing": {
          "type": "string",
          "enum": [
            "gswp3",
            "princeton",
            "watch",
            "wfdei"
          ]
        },
        "bias_adjustment": {
          "type": "string",
          "enum": [
            "nobc"
          ]
        },
        "climate_scenario": {
          "type": "string",
          "enum": [
            "hist"
          ]
        },
        "soc_scenario": {
          "type": "string",
          "enum": [
            "nosoc",
            "pressoc",
            "varsoc",
            "nat"
          ]
        },
        "sens_scenario": {
          "type": "string",
          "enum": [
            "co2"
          ]
        },
        "variable": {
          "type": "string",
          "enum": [
            "qtot",
            "qs",
            "soilmoist",
            "soilmoistfroz",
            "tsl",
            "snd",
            "swe",
            "thawdepth",
            "cveg",
            "cvegag",
            "cvegbg",
            "clitter",
            "csoil",
            "gpp",
            "ra",
            "npp",
            "rh",
            "fireint",
            "firefrac",
            "ecoatmflux",
            "fapar",
            "lai",
            "pft",
            "cleaf",
            "cwood",
            "croot",
            "burntarea"
          ]
        },
        "crop": {
          "type": "string",
          "enum": [
            "whe",
            "mai",
            "soy",
            "ric",
            "bar",
            "ben",
            "cas",
            "cot",
            "euc",
            "mgr",
            "mil",
            "mis",
            "nut",
            "pea",
            "pop",
            "pot",
            "rap",
            "ri2",
            "rye",
            "sgb",
            "sor",
            "sug",
            "sun",
            "others"
          ]
        },
        "irrigation": {
          "type": "string",
          "enum": [
            "rainfed",
            "irrigated"
          ]
        },
        "pft": {
          "type": "string"
        },
        "region": {
          "type": "string",
          "enum": [
            "global"
          ]
        },
        "timestep": {
          "type": "string",
          "enum": [
            "3hr",
            "daily",
            "monthly",
            "annual"
          ]
        },
        "start_year": {
          "type": "number",
          "minimum": 1600,
          "maximum": 2100
        },
        "end_year": {
          "type": "number",
          "minimum": 1600,
          "maximum": 2100
        }
      }
    }
  }
}